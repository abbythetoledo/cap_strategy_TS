{
  "compilerOptions": {
    "isolatedModules": true,
    "rootDir": "./",
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowJs": true,
    "paths": {
      "#cds-models/*": [
        "./@cds-models/*"
      ]
    },
    "types": [
      "node",
      "@cap-js/cds-types",
      "jest"
  ],
  },
  "include": [
    "./srv/**/*"
]
}
